    <servlet-name>styleFlightSchedule</servlet-name>
    <url-pattern>/style_flight_schedule</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>blitController</servlet-name>
    <url-pattern>/submit-ticket</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>chargeWallet</servlet-name>
    <url-pattern>/charge-wallet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>chargeCustomerWallet</servlet-name>
    <url-pattern>/charge-customer-wallet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>signUpPage</servlet-name>
    <url-pattern>/sign_up_page</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/sign_up</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>saveFlightSchedule</servlet-name>
    <url-pattern>/saveFlightSchedule</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>transportController</servlet-name>
    <url-pattern>/transport</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>flightSchedule</servlet-name>
    <url-pattern>/flightSchedule</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/log_out</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RefundTicket</servlet-name>
    <url-pattern>/refund_ticket</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>buyTicket</servlet-name>
    <url-pattern>/buy_ticket</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>page</servlet-name>
    <url-pattern>/page</url-pattern>
  </servlet-mapping>

</web-app>
